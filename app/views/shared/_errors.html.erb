<% if obj.errors.any? %>
<div class="container">
  <div class="row sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel orange lighten-2" id="fade-out-target">
        <span class="white-text">
          <strong>
            <%= pluralize(obj.errors.count, "error") %>
            prohibited your account from being created
            <ul>
              <% obj.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </strong>
        </span>
      </div>
    </div>
  </div>
</div>
<% end %>