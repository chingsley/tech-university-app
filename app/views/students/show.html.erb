<div class="container container-sign-up-form">
  <div class="col s12 m12 l12">
    <div class="card-panel">
        <div class="row center">
          <div class="col s12 m6">
            <div class="card">
              <div class="card-image">
                <img src="https://images.unsplash.com/photo-1471898554234-bcbfedd35134?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80">
                <span class="card-title">Software Engineer</span>
              </div>
              <div class="card-content">
                <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Eveniet, id ipsam? Nobis ducimus, ipsam quibusdam laborum esse voluptates modi laboriosam cum</p>
              </div>
              <div class="card-action">
                <% if current_user == @student %>
                  <%= link_to '<i class="material-icons right">create</i>Edit Profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col s12 m6">
            <ul>
              <li>Name:</li>
              <li><%= @student.name %></li>
            </ul>
            <hr class="student-detail-separator">
            <ul>
              <li>email:</li>
              <li><%= @student.email %></li>
            </ul>
            <hr class="student-detail-separator">
            <ul>
              <li>Enrollments:</li>
              <% if @student.courses.empty? %>
                <li>None</li>
              <% else %>
                <% @student.courses.each do |course| %>
                  <li><%= "#{course.short_name}: #{course.name}"  %>  </li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
    </div>
  </div>
</div>
